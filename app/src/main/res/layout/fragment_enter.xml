<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EnterFragment">


    <TextView
        android:id="@+id/fragment_enter_name_title_txw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/fragment_enter_name_title_txw"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/fragment_enter_ver02_guideline"
        app:layout_constraintStart_toStartOf="@+id/fragment_enter_ver01_guideline"
        app:layout_constraintTop_toTopOf="@+id/fragment_enter_hor01_guideline" />

    <EditText
        android:id="@+id/fragment_enter_name_title_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="@string/fragment_enter_name_title_edit_hint"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/fragment_enter_ver02_guideline"
        app:layout_constraintStart_toStartOf="@+id/fragment_enter_ver01_guideline"
        app:layout_constraintTop_toBottomOf="@+id/fragment_enter_name_title_txw" />

    <Button
        android:id="@+id/fragment_enter_confirm_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:text="@string/fragment_enter_confirm_btn"
        app:layout_constraintBottom_toTopOf="@+id/fragment_enter_hor02_guideline"
        app:layout_constraintEnd_toStartOf="@+id/fragment_enter_ver02_guideline"
        app:layout_constraintStart_toStartOf="@+id/fragment_enter_ver01_guideline"
        app:layout_constraintTop_toBottomOf="@+id/fragment_enter_name_title_edit"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_enter_hor01_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_enter_hor02_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_enter_ver01_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_enter_ver02_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>